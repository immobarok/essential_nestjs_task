model User {
  id                     Int       @id @default(autoincrement())
  email                  String    @unique
  name                   String?
  password               String
  displayImage           String?
  isVerified             Boolean   @default(false)
  emailVerificationToken String?
  emailVerificationExpiry DateTime?
  role                   String    @default("user")
  posts                  Post[]
  @@schema("user")
}